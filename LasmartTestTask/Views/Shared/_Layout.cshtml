<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Konva.js -->
    <script src="https://cdn.jsdelivr.net/npm/konva@8.4.3/konva.min.js"></script>
    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
        body {
            margin: 0;
            display: flex;
            height: 100vh;
        }

        #container {
            flex: 1;
            background: #f0f0f0;
        }

        #sidebar {
            width: 300px;
            padding: 10px;
            background: #fff;
            border-left: 1px solid #ccc;
            overflow-y: auto;
        }

            #sidebar input {
                width: 100%;
                margin-bottom: 8px;
            }

        h3 {
            margin-bottom: 8px;
        }

        button {
            cursor: pointer;
            margin-bottom: 8px;
        }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
